<div class='loginbox' id='login'>

	<% form_remote_tag :url=> {:action=> "login"}, :update => "content" do %>
		<strong>Login</strong>
		<table style="padding:5px; align:center">
		<tr>
  			<td style="text-align:right;">Jabber ID </label></td>
  			<td><%= text_field_tag(:login) %></td>
		</tr>
			
		<tr>
  			<td style="text-align:right;">Password </label></td>
  			<td><%= password_field_tag(:password) %></td>
		</tr>
		</table>

		<%= submit_tag "Submit" %>
		
	<% end %>

</div>